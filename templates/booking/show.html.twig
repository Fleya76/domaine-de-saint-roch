{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <div class="container">
        <h1>Booking</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ booking.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ booking.title }}</td>
                </tr>
                <tr>
                    <th>Début à</th>
                    <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Fin à</th>
                    <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ booking.category }}</td>
                </tr>
                <tr>
                    <th>Emplacement</th>
                    <td>{{ booking.place }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('booking_index') }}">Voir le planning</a>

        <a href="{{ path('booking_edit', {'id': booking.id}) }}">Modifier</a>

        {{ include('booking/_delete_form.html.twig') }}
    
    </div>

{% endblock %}
