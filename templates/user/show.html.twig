{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Utilisateur {{ user.email }} </h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom de famille</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Adresse email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ user.phone }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.address }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.city }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ user.postalCode }}</td>
                </tr>
                <tr>
                    <th>Valider</th>
                    <td>{{ user.validation ? 'Oui' : 'Non' }}</td>
                </tr>
                {% for dog in user.dog %}
                <tr>
                    <th>Nom et race du chien</th>
                    <td>{{ dog }}</td>
                </tr>
                {% endfor %}

                {% for contract in user.contract %}
                <tr>
                    <th>Contrat</th>
                    <td>{{contract}}</td>
                </tr>
                {% endfor %}

            </tbody>
        </table>

        <a href="{{ path('user_index') }}">Voir les clients du domaine</a>
        <br>
        <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier l'utilisateur</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
