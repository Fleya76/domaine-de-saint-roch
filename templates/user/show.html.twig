{% extends 'base.html.twig' %}

{% block title %}Client du domaine de Saint-Roch{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Utilisateur {{ user.firstName }} {{ user.lastName }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom de famille</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Adresse email</th>
                    <td><a href="mailto:{{user.email}}">{{ user.email }}</a></td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td><a href="tel:{{user.phone}}">{{ user.phone }}</a></td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.address }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.city }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ user.postalCode }}</td>
                </tr>
                <tr>
                    <th>Valider</th>
                    <td>{{ user.validation ? 'Oui' : 'Non' }}</td>
                </tr>
                {% for dog in user.dog %}
                <tr>
                    <th>Nom et race du chien</th>
                    <td>{{ dog }}</td>
                </tr>
                {% endfor %}

                {% for contract in user.contract %}
                <tr>
                    <th>Contrat</th>
                    <td><a href="{{ path('contract_show', {'id' : contract.id}) }}">{{contract}}</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <div class="actionButton">
            <a href="{{ path('user_edit', {'id': user.id}) }}">
                <button type="button" class="btn btn-success mr-1">Modifier l'utilisateur</button>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_index') }}">
                    <button type="button" class="btn btn-info mr-1">Voir les clients du domaine</button>
                </a>
                <a href="{{ path('contract_new', {'id': user.id}) }}">
                    <button type="button" class="btn btn-warning mr-1">Créer un nouveau contract</button>
                </a>
                
                {{ include('user/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
