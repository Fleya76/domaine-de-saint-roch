{% extends 'base.html.twig' %}

{% block title %}Mon chien {{dog.name}}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mon chien {{dog.name}}</h1>
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ dog.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom du chien</th>
                        <td>{{ dog.name }}</td>
                    </tr>
                    <tr>
                        <th>Race du chien</th>
                        <td>{{ dog.breed }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="actionButton">
            <a href="{{ path('dog_edit', {'userConnect' : app.user.id, 'id': dog.id}) }}"> <button class="btn btn-success mr-1">Modifier les informations du chien</button></a>
            {{ include('dog/_delete_form.html.twig') }}
        </div>

    </div>

{% endblock %}
